<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.example.petar.inteligentnisistemi.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:weightSum="10"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Registartski broj:"/>
        <EditText
            android:textColor="@color/textColor"
            android:id="@+id/loginEditText"
            android:text="@string/regBr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:hint="Unesite registarski broj"/>
        <TextView
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Marka automobila"/>
        <EditText
            android:textColor="@color/textColor"
            android:id="@+id/markEditText"
            android:hint="Unesite marku automobila"
            android:text="@string/brand"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColor"
            android:text="Login"
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
<!--        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColor"
            android:text="Register"
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>-->
    </LinearLayout>
    <ImageView
        android:src="@drawable/car_sys_logo"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</LinearLayout>
